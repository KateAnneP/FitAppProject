    <children>
        <Pane prefHeight="500.0" prefWidth="180.0">
            <children>
                <Button fx:id="button_bmi" layoutY="14.0" mnemonicParsing="false" onAction="#obliczBMIAction" prefHeight="44.0" prefWidth="180.0" text="Oblicz BMI">
