                <TableColumn fx:id="kolumna_nazwa" editable="false" prefWidth="149.0" text="nazwa [jednostka]" />
                <TableColumn fx:id="kolumna_kalorie" editable="false" prefWidth="113.0" text="kaloryczność" />
              </columns>
